<p id="notice"><%= notice %></p>

<h1>Listing Registrations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>College name</th>
      <th>Department</th>
      <th>Email</th>
      <th>Mobile number</th>
      <th>Type of conference</th>
      <th>Paper title</th>
      <th>Abstract</th>
      <th>File upload</th>
      <th colspan="3"></th>
    </tr>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.first_name %></td>
        <td><%= registration.last_name %></td>
        <td><%= registration.college_name %></td>
        <td><%= registration.department %></td>
        <td><%= registration.email %></td>
        <td><%= registration.mobile_number %></td>
        <td><%= registration.type_of_conference %></td>
        <td><%= registration.paper_title %></td>
        <td><%= registration.abstract %></td>
        <td><%= link_to "Download file", registration.file_upload.url(:original, false) %></td>
        <td><%= link_to 'Show', registration %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

